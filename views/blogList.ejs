<script>
    // 分页按钮
    $(function(){
        var test = window.location.href;
        var page = parseInt(test.split("?page=")[1]);
        var str = '';
        if(isNaN(page)) {
            page = 1;
        }
        for(let i = 1; i <= parseInt('<%- d_lenth %>' / 5)+1; i++) {
            if(page == i){
                str += `<span class="current">${page}</span>`
            } else {
                str += `<a href="/home/paging?page=${i}">${i}</a>`
            }
        }
        $('.post-pagination').html(str)
    })
</script>

